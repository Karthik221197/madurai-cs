
@{
    Layout = null;
}
@using WebMaduraiCateringService.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
        <table cellpadding="2" cellspacing="2" border="1">
            <tr>
                <th>MenuId</th>
                <th>MenuName</th>
                <th>MenuImage</th>
                <th>Price_Person</th>
            </tr>
            @foreach(Product p in ViewBag.listProducts)
            {
                <tr>
                    <td>@p.MenuId</td>
                    <td>@p.MenuName</td>
                    <td><img src="@Url.Content(p.MenuImage)" width="100" height="100" /></td>
                    <td>@p.Price_Person</td>
                    <td align="center">@Html.ActionLink("Add To Cart", "AddtoCart", "ShoppingCart", new { MenuId = p.MenuId }, null)</td>
                </tr>
            }
        </table>

</body>
</html>
